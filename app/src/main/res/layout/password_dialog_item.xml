<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#00BCD4"
        android:layout_margin="5dp"
        android:textColor="#FF5722"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="密签"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <EditText
        android:gravity="center"
        android:id="@+id/passwordTitleOfDialog"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="35dp"
        android:background="@null"
        android:hint="标题"/>

    <EditText
        android:id="@+id/passwordAccountOfDialog"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:background="@null"
        android:hint="账号"/>

    <EditText
        android:id="@+id/passwordPasswordOfDialog"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@null"
        android:layout_margin="5dp"
        android:hint="密码"/>

    <EditText
        android:id="@+id/passwordUriOfDialog"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:background="@null"
        android:hint="链接"/>

    <EditText
        android:id="@+id/passwordExplainOfDialog"
        android:layout_width="match_parent"
        android:gravity="top"
        android:layout_margin="5dp"
        android:layout_height="35dp"
        android:background="@null"
        android:hint="说明"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/passwordConfirmBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"/>

        <Button
            android:id="@+id/passwordCancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>